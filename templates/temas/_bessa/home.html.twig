{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}

    <script>
        $(document).ready(function(e) {
            $('.home a').addClass('ativo');
        });
    </script>
{% endblock %}

{% block body %}
    <div class="home">
        <section class="banner">
            <div class="slide-home">
                {% for banner in banners %}
                    <div class="item-u">
                        <a href="{{ banner.link }}"><img src="{{ banner.image.full.url }}" alt="" width="100%"></a>
                    </div><!-- END Único -->
                {% endfor %}
            </div>
        </section><!-- END Banners -->

        <div class="center">
            <ul class="show-categorias">
                <h6 class="busca-home-title">Acompanhe a relação de bens disponíveis por categoria</h6>
                <li>
                    <a href="/categoria/Imóveis">
                        <div class="cont-icon">
                            <i class="fas fa-home"></i>
                        </div>
                        <span>Imóveis</span>
                    </a>
                </li>

                <li>
                    <a href="/categoria/Veículos">
                        <div class="cont-icon">
                            <i class="fas fa-car"></i>
                        </div>
                        <span>Veículos</span>
                    </a>
                </li>

                <li>
                    <a href="/categoria/Máquinas">
                        <div class="cont-icon">
                            <i class="fas fa-tractor"></i>
                        </div>
                        <span>Máquinas</span>
                    </a>
                </li>

                <li>
                    <a href="/categoria/Diversos">
                        <div class="cont-icon">
                            <i class="fas fa-desktop"></i>
                        </div>
                        <span>Diversos</span>
                    </a>
                </li>
            </ul>

            <div class="col-2 seach-pesquisa">
                <form method="get" action="{{path('busca', {busca: '__BUSCA__'})}}" class="cont-search site-form-search">

                    <div class="cont-search-itens" style="position: relative;">
                        <span id="icon-search"><i class="fas fa-search"></i></span>
                        <input type="text" name="busca" id="buscaDefault" tabindex="" placeholder="Pesquise por leilões e bens">
                        <button type="submit">Pesquisar</button>
                    </div>
                    <div style="display: flex; margin-top: 15px; justify-content: center;">
                        <div style="margin-right: 10px;">
                            <input id="atuais" type="checkbox" name="">
                            <label for="atuais">Leilões atuais</label>
                        </div>
                        <div style="margin-right: 10px;">
                            <input id="encerrados" type="checkbox" name="">
                            <label for="encerrados">Leilões encerrados</label>
                        </div>
                        <div>
                            <input id="suspensos" type="checkbox" name="">
                            <label for="suspensos">Leilões suspensos</label>
                        </div>
                    </div>
                </form>
            </div><!--/-->
        </div>

        <section id="destaques" class="cont-destaques">
            <a href="#destaques" class="i-destaque">
                <i class="fas fa-sort-down"></i>
            </a>
            <div class="center-full">
                <h2 class="title-default">Destaques</h2>

                <div class="flex-destaques">
                    {% for lote in lotes %}
                        {% set thumb = lote.foto and lote.foto.min ? lote.foto.min.url : asset('build/images/sem-foto.jpg') %}
                        {% set loteUrl = path('lote', {id: lote.id, slug: lote.slug}) %}
                        <article>
                            <a href="{{ loteUrl }}">
                                <div class="lote-header">
                                    <span class="tipo">{{ lote.titulo }}</span>
                                    <div class="cont-img lote-image">
                                        <div class="image"
                                             style="background-size: cover; background-position: 50% 50%; background-image: url({{ thumb }}); background-repeat: no-repeat"></div>
                                    </div>
                                    <p>{{ lote.descricao }}</p>
                                </div>
                                <div class="lote-footer">
                                    <div class="valores">
                                        <div class="left">
                                            <h6>Lance Inicial</h6>
                                            {% if lote.valorAtual %}
                                                <strong>R$ {{ lote.valorAtual|number_format(2, ',', '.') }}</strong>
                                            {% else %}
                                                <strong>Em breve</strong>
                                            {% endif %}
                                        </div><!---->
                                        <div class="right">
                                            <h6>Lance Atual</h6>
                                            <strong>-</strong>
                                        </div><!---->
                                    </div><!---->
                                </div>
                                <span class="btn-destaque">Aberto para lances</span>
                            </a>
                        </article><!-- END Único -->
                    {% endfor %}
                </div><!-- END Flex -->
            </div><!-- END Center Full -->
            {#<div class="center">
                <div class="search search-detalhe" style="display: none;">
                    <form>
                        <div>
                            <label for="">Categoria:</label>
                            <div>
                                <select id="">
                                    <option value="">Imóveis</option>
                                </select>
                            </div>
                        </div><!---->

                        <div>
                            <label for="">Tipo de bem:</label>
                            <div>
                                <select id="">
                                    <option value="">Apartamento</option>
                                </select>
                            </div>
                        </div><!---->

                        <div>
                            <label for="">Tipo de leilão:</label>
                            <div>
                                <select id="">
                                    <option value="">Qualquer</option>
                                </select>
                            </div>
                        </div><!---->

                        <div class="btn-cont">
                            <button type="submit">Buscar</button>
                        </div><!---->
                    </form>
                </div><!-- END Pesquisa -->
            </div>#}
        </section><!-- END Destaques -->

        <section class="cont-leiloes">
            <div class="center">
                <h2 class="title-default">Agenda de Leilões <a href="{{ path('print_leiloes') }}" target="_blank" style="font-size: 22px;"><i class="fa fa-print"></i></a></h2>
                
                <ul class="navLeiloes navBar">
                    <li>
                        <a class="ativo">Próximos leilões</a>
                    </li>

                    <li>
                        <a>Suspensos</a>
                    </li>

                    <li>
                        <a>Encerrados</a>
                    </li>
                </ul>

                <div class="showInfos">
                    <div class="item-aba ativo">
                        <div class="flex-leiloes">
                            {% for leilao in leiloesAtuais %}
                                {{ include("temas/02/includes/inc.leilao-tab.html.twig", {leilao: leilao, _loop: loop}, with_context = false) }}
                            {% endfor %}
                            {% if not leiloesAtuais|length %}
                                <div class="m-b-lg">Nenhum leilão</div>
                                <div class="clearfloat"></div>
                            {% endif %}
                        </div>
                    </div><!-- / END >Próximos -->

                    <div class="item-aba">
                        Nenhum leilão encontrado.
                    </div><!-- / END Suspensos -->

                    <div class="item-aba">
                        Nenhum leilão encontrado.
                    </div><!-- / END Encerrados -->
                </div>
            </div><!-- / END Center -->
        </section><!-- / END Leiloes -->

        {#<section class="cont-testemunhos">
            <div class="center">
                <h2 class="title-default">10 anos de experiência em leilões</h2>

                <div class="slide-testemunhos">
                    <div>
                        <div class="cont-foto">
                            <img src="{{ asset('build/images/foto.jpg') }}" alt="">
                        </div>
                        <div class="cont-text">
                            <img src="{{ asset('build/images/icon-depoimento.png') }}" alt="">
                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                                tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
                                quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
                                consequat. Duis aute irure dolor in reprehenderit in voluptate velit.</p>
                            <span>Tiago Felipe</span>
                            <small>Leiloeiro Oficial do Estado de Minas Gerais</small>
                        </div>
                    </div><!-- END -->
                </div>
            </div><!-- END Center -->
        </section><!-- END Testemunhos -->#}
    </div>

    {% if MOSTRAR_NEWSLETTER_FULL %}
    <section class="cont-newsletter">
        <div class="center-full">
            <div class="newsletter">
                <h4>Newsletter</h4>
                <p>Receba em seu e-mail todos os nossos leilões e informações dos bens disponíveis e não perca boas
                    oportunidades.</p>
                <form>
                    <div>
                        <input type="" name="" placeholder="Digite seu melhor e-mail">
                        <button type="submit">Inscrever</button>
                    </div>
                </form>
            </div>
        </div><!-- END Full Center -->
    </section><!-- END Newsletter -->
    {% endif %}

    {% if MOSTRAR_NOTICIAS %}
    <section class="cont-informativo">
        <div class="center-full">
            <h2 class="title-default">Últimas Notícias e Informativos</h2>

            <div class="flex-noticias">
                <article>
                    <a href="#">
                        <div class="cont-img">
                            <div class="img" style="background-image: url({{ '"'~asset('build/images/noticia-1.jpg')~'"' }})"></div>
                        </div>

                        <div class="row-top">
                            <span>Por Hebley Freitas</span>
                            <small>|</small>
                            <span>27 de janeiro 2020</span>
                        </div><!-- END Row Top -->

                        <div class="row-bottom">
                            <span class="categoria">Blog</span>
                            <h3>Aqui fica uma notícia ou destaque do blog</h3>
                        </div><!-- END Row Bottom -->
                    </a>
                </article><!-- END Único -->

                <article>
                    <a href="#">
                        <div class="cont-img">
                            <div class="img" style="background-image: url({{ '"'~asset('build/images/noticia-1.jpg')~'"' }})">
                        </div>

                        <div class="row-top">
                            <span>Por Hebley Freitas</span>
                            <small>|</small>
                            <span>27 de janeiro 2020</span>
                        </div><!-- END Row Top -->

                        <div class="row-bottom">
                            <span class="categoria">Blog</span>
                            <h3>Conteúdo gera melhor ranking no Google</h3>
                        </div><!-- END Row Bottom -->
                    </a>
                </article><!-- END Único -->

                <div class="cont-btn">
                    <a href="#">Veja mais Notícias</a>
                </div>
            </div>
        </div><!-- END Center Full -->
    </section><!-- END Notícias -->
    {% endif %}
    <div class="clearfloat"></div>
{% endblock %}