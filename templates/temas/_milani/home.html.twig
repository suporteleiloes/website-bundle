{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('home') }}
{% endblock %}

{% block body %}
    <section class="cont-banner">
        <div class="slide-home">
            {% for banner in banners %}
                <div class="item">
                    <a href="{{ banner.link }}"><img width="100%" src="{{ banner.image.full.url }}" alt=""></a>
                </div><!-- END Único -->
            {% endfor %}
        </div>
    </section><!-- / END Banner -->

    <section class="cont-busca tabsBusca">
        <div class="center">
            <div class="left">
                <form method="get" action="{{path('busca', {busca: '__BUSCA__'})}}" class="cont-search site-form-search">
                    <div class="position-btn">
                        <input type="text" name="busca" id="buscaDefault" placeholder="Buscar no site" tabindex="1">
                        <button type="submit" tabindex="6"><i class="fas fa-search"></i></button>
                    </div>

                    <a href="/categoria/Imóveis">
                        <label for="imoveis">
                            <div class="icon"><i class="fa fa-home"></i></div>
                            <span>Imóveis</span>
                        </label>
                    </a>

                    <a href="/categoria/Veículos">
                        <label for="carros" class="l-carros">
                            <div class="icon"><i class="fa fa-car"></i></div>
                            <span>Veículos</span>
                        </label>
                    </a>

                    <a href="/categoria/Máquinas">
                        <label for="motos">
                            <div class="icon">
                                <i class="fas fa-tractor"></i>
                            </div>
                            <span>Máquinas</span>
                        </label>
                    </a>

                    <a href="/categoria/Diversos">
                        <label for="meteriais">
                            <div class="icon">
                                <i class="fas fa-desktop"></i>
                            </div>
                            <span>Diversos</span>
                        </label>
                    </a>
                </form>
            </div><!---->

            <div class="right">
                <div class="cont-icon">
                    <img src="{{ asset('build/images/icon-newsletter.png') }}" alt="Nesletter">
                </div><!---->
                <div class="r-newsletter">
                    <p><strong>Inscreva-se</strong> para receber nossos melhores leilões</p>
                    <form>
                        <div>
                            <label for="email">Digite seu e-mail:</label>
                            <input id="email" type="" name="" tabindex="1">
                        </div>
                    </form>
                </div><!---->
            </div><!---->
        </div><!-- / END Center -->
    </section><!-- / END Busca -->

    <section class="cont-destaques">
        <div class="center">

            <ul class="navDestaques navBar">
                <li>
                    <a class="ativo">Destaques</a>
                </li>

                {#<li>
                    <a>Abertos para lance</a>
                </li>

                <li>
                    <a>Em breve</a>
                </li>

                <li>
                    <a>Venda Direta</a>
                </li>

                <li>
                    <a>Suspensos</a>
                </li>

                <li>
                    <a>Encerrados</a>
                </li>#}
            </ul>

            {% if lotes %}
                <div class="showInfos">
                    <div class="home-destaques no-slide">
                        {# <div class="slide-destaques">#}
                        {% for lote in lotes %}
                            <div class="show-destaques lote-image-home">
                                <article>
                                    {% set thumb = lote.foto and lote.foto.thumb ? lote.foto.thumb.url : asset('build/images/sem-foto.jpg') %}
                                    {% set loteUrl = path('lote', {id: lote.id, slug: lote.slug}) %}
                                    <a href="{{ loteUrl }}">
                                        <div class="cont-foto lote-image">
                                            <div class="image"
                                                 style="background-size: cover; background-position: 50% 50%; background-image: url({{ thumb }}); background-repeat: no-repeat"></div>
                                        </div>
                                        <div class="cont-info">
                                            <h3>{{ lote.titulo }}</h3>

                                            <div class="dados-lote">
                                                {% if lote.valorAtual %}
                                                <div class="valor">Inicia por
                                                    <strong><span>R$</span> {{ lote.valorAtual|number_format(2, ',', '.') }}
                                                    </strong></div>
                                                {% endif %}
                                                <div class="data">Leilão
                                                    <strong>{{ lote.leilao.dataAbertura|date('d/m/Y H:i') }}</strong>
                                                </div>
                                            </div>
                                        </div>

                                        {#<strong class="btn-lote">Visitar Lote</strong>#}
                                    </a>
                                </article><!-- END Único -->
                            </div><!---->
                        {% endfor %}
                        {#</div>#}
                    </div>
                </div>
            {% endif %}

        </div><!-- END Center -->
    </section>

    <section class="cont-leiloes">
        <div class="center">
            <ul class="navLeiloes navBar">
                <li>
                    <a class="ativo">Próximos leilões</a>
                </li>

                <li class="print">
                    <a href="{{ path('print_leiloes') }}" target="_blank"><i class="fa fa-print"></i> <span>Imprimir leilões atuais</span></a>
                </li>

                {#<li>
                    <a>Suspensos</a>
                </li>

                <li>
                    <a>Encerrados</a>
                </li>#}
            </ul>

            <div class="showInfos mb-2">
                <div class="item-aba ativo">
                    <div class="flex-leiloes">
                        {% for leilao in leiloesAtuais %}
                            {% include 'temas/02/includes/inc.leilao-tab.html.twig' %}
                        {% endfor %}
                        {% if not leiloesAtuais|length %}
                            <div class="m-b-lg">Nenhum leilão</div>
                            <div class="clearfloat"></div>
                        {% endif %}
                    </div>
                </div><!-- / END >Próximos -->

                {#<div class="item-aba">
                    Nenhum leilão disponível
                </div><!-- / END Suspensos -->

                <div class="item-aba">
                    enhum leilão disponível
                </div><!-- / END Encerrados -->#}
            </div>
        </div><!-- / END Center -->
    </section><!-- / END Leiloes -->

    {% if MOSTRAR_DEPOIMENTO %}
    <section class="cont-testemunhos">
        <div class="center">
            <h2 class="title-default">Milani Leilões <span>Desde 2016 atuando em leilões judiciais e extrajudiciais de empresas públicas e privadas.</span></h2>

            <div class="slide-testemunhos">
                <div class="w-c">
                    <div class="cont-foto">
                        <img src="{{ asset('client/milani/foto-leiloeiro.jpeg') }}" alt="Foto Leiloeiro">
                    </div>
                    <div class="cont-text">
                        <img src="{{ asset('client/milani/icon-depoimento-azul.png') }}" alt="Icon Depoimento">
                        <p>Capitalização através da venda de ativos.</p>
                        <span>Clever Milani</span>
                        <small>Leiloeiro Público Oficial do Estado do Paraná</small>
                    </div>
                </div><!-- END -->
            </div>
        </div><!-- END Center -->
    </section><!-- END Testemunhos -->
    {% endif %}

    <div style="text-align: center; font-size: 14px;">
        <iframe src="{{ MAPA }}"
                width="100%" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false"
                tabindex="0"></iframe>
    </div>
    {#
    {% if MOSTRAR_NEWSLETTER_FULL %}
    <section class="cont-newsletter">
        <div class="center-full">
            <div class="newsletter">
                <h4>Newsletter</h4>
                <p>Receba em seu e-mail todos os nossos leilões e informações dos bens disponíveis e não perca boas
                    oportunidades.</p>
                <form>
                    <div>
                        <input type="" name="" placeholder="Digite seu melhor e-mail">
                        <button type="submit">Inscreve</button>
                    </div>
                </form>
            </div>
        </div><!-- END Full Center -->
    </section><!-- END Newsletter -->
    {% endif %}
    #}
{% endblock %}