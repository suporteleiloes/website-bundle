{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

{% block body %}
	<section class="cont-banner">
		<div class="slide-home">
			{% for banner in banners %}
			<div class="item">
				{#<div class="text">
					<p><strong>Próximo Leilão:</strong> Segunda-feira, 25/06/2020 às 16:00. Veículos de seguradoras e financeiras <a href="#" class="btn-banner">Veja os lotes</a></p>
				</div>#}

				<div class="cont-img">
					<a href="{{ banner.link }}">
						<img src="{{ banner.image.full.url }}" class="img-responsive" alt="">
					</a>
				</div>
			</div><!-- / END Único -->
			{% endfor %}
		</div>
	</section><!-- / END Banner -->

	<section class="cont-busca">
		<div class="center">
			<div class="left">
				<form method="post" action="{{path('busca', {busca: '__BUSCA__'})}}" class="cont-search site-form-search">
					<div class="position-btn">
                        <input type="text" name="busca" id="buscaDefault" placeholder="Buscar no site" tabindex="1">
                        <button type="submit" tabindex="6"><i class="fas fa-search"></i></button>
                    </div>

					<a href="/categoria/Imóveis">
                        <label for="imoveis">
                            <div class="icon"><i class="fa fa-home"></i></div>
                            <span>Imóveis</span>
                        </label>
                    </a>

					<a href="/categoria/Veículos">
                        <label for="carros" class="l-carros">
                            <div class="icon"><i class="fa fa-car"></i></div>
                            <span>Veículos</span>
                        </label>
                    </a>

					<a href="/categoria/Máquinas">
                        <label for="motos">
                            <div class="icon">
                                <i class="fas fa-tractor"></i>
                            </div>
                            <span>Máquinas</span>
                        </label>
                    </a>

                    <a href="/categoria/Diversos">
                        <label for="meteriais">
                            <div class="icon">
                                <i class="fas fa-desktop"></i>
                            </div>
                            <span>Diversos</span>
                        </label>
                    </a>
				</form>
			</div><!---->

			<div class="right">
				<div class="cont-icon">
					<img src="{{ asset('build/images/icon-newsletter.png') }}" alt="Nesletter">
				</div><!---->
				<div class="r-newsletter">
					<p><strong>Inscreva-se</strong> para receber nossos melhores leilões</p>
					<form>
						<div>
							<label for="email">Digite seu e-mail:</label>
							<input id="email" type="" name="" tabindex="1">
						</div>
					</form>
				</div><!---->
			</div><!---->
		</div><!-- / END Center -->
	</section><!-- / END Busca -->

	<section class="cont-destaques">
        <div class="center">
            <ul class="navDestaques navBar">
                <li>
                    <a class="ativo">Destaques</a>
                </li>
            </ul>

            {% if lotes %}
                <div class="showInfos">
                    <div class="home-destaques no-slide">
                        {# <div class="slide-destaques">#}
                        {% for lote in lotes %}
                            <div class="show-destaques lote-image-home">
                                <article>
                                    {% set thumb = lote.foto and lote.foto.thumb ? lote.foto.thumb.url : asset('build/images/sem-foto.jpg') %}
                                    {% set loteUrl = path('lote', {id: lote.id, slug: lote.slug}) %}
                                    <a href="{{ loteUrl }}">
                                        <div class="cont-foto lote-image">
                                            <div class="image"
                                                 style="background-size: cover; background-position: 50% 50%; background-image: url({{ thumb }}); background-repeat: no-repeat"></div>
                                        </div>
                                        <div class="cont-info">
                                            <h3>{{ lote.titulo }}</h3>

                                            <div class="dados-lote">
                                                {% if lote.valorAtual %}
                                                <div class="valor">Inicia por
                                                    <strong><span>R$</span> {{ lote.valorAtual|number_format(2, ',', '.') }}
                                                    </strong></div>
                                                {% endif %}
                                                <div class="data">Leilão
                                                    <strong>{{ lote.leilao.dataAbertura|date('d/m/Y H:i') }}</strong>
                                                </div>
                                            </div>
                                        </div>

                                        {#<strong class="btn-lote">Visitar Lote</strong>#}
                                    </a>
                                </article><!-- END Único -->
                            </div><!---->
                        {% endfor %}
                        {#</div>#}
                    </div>
                </div>
            {% endif %}
        </div><!-- END Center -->
    </section>

    <section class="cont-leiloes">
		<div class="center">
			<ul class="navLeiloes navBar">
				<li>
                    <a class="ativo">Próximos leilões</a>
                </li>
			</ul>

			<div class="showInfos">
                <div class="item-aba ativo" style="width: 100%; display: flex; padding: 22px 0 0 0;">
                   	<div class="flex-leiloes">
                   		{% for leilao in leiloesAtuais %}
                   		{% if _loop is not defined %}
    						{% set _loop = loop %}
						{% endif %}
                    	<article>
                    		<a href="#">
                    			<div class="cont-padd">
                    				<strong class="data">{{ leilao.dataAberturaOuEncerramento|date('d/m') }} {{ leilao.dataAberturaOuEncerramento|date('H\\hi') }}</strong>
	                    			<h3>{{ leilao.titulo }}</h3>
                    			</div>

                    			<div class="logo-leilao">
						            {% if leilao.image %}
						                {% set urlThumb = leilao.image.thumb is iterable ? leilao.image.thumb.url : leilao.image.thumb %}
						                {% if urlThumb %}
						                    <img class="position-relative" src="{{ urlThumb }}" />
						                {% endif %}
						            {% else %}
						                <div class="leilao-comitentes">
						                    <div id="comitente-anim{{ _loop.index }}" class="leilao-comitente-images">
						                        {% if leilao.comitentes|length %}
						                            {% for comitente in leilao.comitentes %}
						                                {% if comitente.image %}
						                                    {% set urlThumb = comitente.image.thumb is iterable ? comitente.image.thumb.url : comitente.image.thumb %}
						                                    <div class="leilao-image-comitente {{ loop.index==1 ? 'show' : '' }}"
						                                         style="background-size: contain; background-position: 50% 50%; background-image: url({{ urlThumb }}); background-repeat: no-repeat"></div>
						                                {% endif %}
						                            {% endfor %}
						                        {% endif %}
						                    </div>
						                </div>
						            {% endif %}
						        </div>

                    			<div class="infos">
						            {% if leilao.dataPraca2 %}
						            <span class="praca{{ leilao.praca == 2 ? ' encerrado' : '' }}">1o leilão: <strong>{{ leilao.dataPraca1|date('d/m/Y H:i') }}</strong></span>
						            <span class="praca{{ leilao.isEncerrado ? ' encerrado' : '' }}">2o leilão: <strong>{{ leilao.dataPraca2|date('d/m/Y H:i') }}</strong></span>
						            {% else %}
						            <span class="praca">Leilão único: <strong>{{ leilao.dataPraca1|date('d/m/Y H:i') }}</strong></span>
						            {% endif %}
						            <span class="tipo leilao-tipo-{{ leilao.tipo }}">{{ leilao.tipoString }}</span>
						        </div>

						        <div class="btn-leilao btn-status-{{ leilao.status }}">
						            <span>{{ leilao.statusMessage }}</span>
						        </div>
                    		</a>
                    	</article><!-- END Único -->
                    	{% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>

    {% if MOSTRAR_DEPOIMENTO %}
	<section class="cont-depoimentos">
		<div class="center">
			<div class="rotate">
				<h2>10 Anos de experiência em leilões</h2>

				<div class="flex-depoimentos">
					<div class="slide-depoimentos">
						<div class="item">
							<div class="cont-foto">
								<img src="{{ asset('build/images/foto.jpg') }}" alt="{{ sl.nome_leiloeiro }}">
							</div>
							
							<div class="cont-texto">
								<img src="{{ asset('build/images/icon-depoimento.png') }}" alt="Icon Depoimentos">
								<p>Aqui deve ficar um texto resumido sobre o leiloeiro e sua Experiência em Leilões.</p>
								<span>Tiago Felipe</span>
								<small>Leiloeiro Oficial do Estado de Minas Gerais</small>
							</div>
						</div><!---->
					</div>
					<div class="mapa">
						<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3728.224978383535!2d-40.76142508582897!3d-20.862980273382167!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xb919822afb2e6b%3A0x216a7f67342bbf67!2sRod.%20do%20Sol%2C%2029%2C%20Itapemirim%20-%20ES%2C%2029285-000!5e0!3m2!1spt-BR!2sbr!4v1593899420238!5m2!1spt-BR!2sbr" width="100%" height="248" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
					</div>
				</div>
			</div>
		</div><!-- / END Center -->
	</section><!-- / END Depoimentos -->
	{% endif %}

	{% if MOSTRAR_NEWSLETTER_FULL %}
	<section class="cont-newsletter">
	    <form class="" method="post" action="">
		    <h3>Receba novidades por E-mail</h3>
		    <span>Cadastre seu e-mail abaixo e receba gratuitamente conteúdos exclusivos e todas as novidades do site com prioridade!</span>
		        
		    <div class="inputs">
		        <div>
		           	<input type="" name="email" placeholder="Insira seu e-mail..." required>
		        </div>
		        <button type="submit">Inscrever-se</button>
		    </div>
		</form>
	</section><!-- / END Newsletter -->
	{% endif %}
{% endblock %}