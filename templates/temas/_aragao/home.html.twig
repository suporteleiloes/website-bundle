{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('home') }}
{% endblock %}

{% block body %}
    <div class="home">
        <section class="banner">
            <div class="slide-home">
                {% for banner in banners %}
                    <div class="item-u">
                        <a href="{{ banner.link }}"><img src="{{ banner.image.full.url }}" alt=""></a>
                    </div><!-- END Único -->
                {% endfor %}
            </div>
        </section><!-- END Banners -->

        <div class="center">
            <h6 class="busca-home-title">Acompanhe a relação de bens disponíveis por categoria</h6>
            <ul class="show-categorias">
                <li>
                    <a href="/categoria/Imóveis">
                        <div class="cont-icon">
                            <i class="fas fa-home"></i>
                        </div>
                        <span>Imóveis</span>
                    </a>
                </li>

                <li>
                    <a href="/categoria/Veículos">
                        <div class="cont-icon">
                            <i class="fas fa-car"></i>
                        </div>
                        <span>Veículos</span>
                    </a>
                </li>

                <li>
                    <a href="/categoria/Máquinas">
                        <div class="cont-icon">
                            <i class="fas fa-tractor"></i>
                        </div>
                        <span>Máquinas</span>
                    </a>
                </li>

                <li>
                    <a href="/categoria/Diversos">
                        <div class="cont-icon">
                            <i class="fas fa-desktop"></i>
                        </div>
                        <span>Diversos</span>
                    </a>
                </li>

                <li>
                    <a href="#" class="filtrosAvancadosClick">
                        <div class="cont-icon">
                            <i class="fas fa-search-plus"></i>
                        </div>
                        <span>Filtros Avançados</span>
                    </a>
                </li>
            </ul>

            <div class="filtros-avancados">
                {% include 'temas/04/includes/filtros-avancados.html.twig' %}
            </div>

            <div class="col-2 seach-pesquisa">
                <form method="get" action="{{path('busca', {busca: '__BUSCA__'})}}" class="cont-search site-form-search">

                    <div class="cont-search-itens" style="position: relative;">
                        <span id="icon-search"><i class="fas fa-search"></i></span>
                        <input type="text" name="busca" id="buscaDefault" tabindex="" placeholder="Pesquise por leilões e bens">
                        <button type="submit">Pesquisar</button>
                    </div>
                    <div class="search-filtros" style="">
                        <div>
                            <input id="atuais" type="checkbox" name="">
                            <label for="atuais">Leilões atuais</label>
                        </div>
                        <div>
                            <input id="encerrados" type="checkbox" name="">
                            <label for="encerrados">Leilões encerrados</label>
                        </div>
                        <div>
                            <input id="suspensos" type="checkbox" name="">
                            <label for="suspensos">Leilões suspensos</label>
                        </div>
                    </div>
                </form>
            </div><!--/-->
        </div>

        {% if lotes|length > 0 %}
        <section id="destaques" class="cont-destaques">
            {#<a href="#destaques" class="i-destaque">
                <i class="fas fa-sort-down"></i>
            </a>#}
            <div class="center-full">
                <h2 class="title-default">Destaques</h2>

                <div class="flex-destaques">
                    {% for lote in lotes %}
                        {% set thumb = lote.foto and lote.foto.min ? lote.foto.min.url : asset('build/images/sem-foto.jpg') %}
                        {% set loteUrl = path('lote', {id: lote.id, slug: lote.slug}) %}
                        <article>
                            <a href="{{ loteUrl }}">
                                <div class="lote-header">
                                    <span class="tipo">{{ lote.titulo }}</span>
                                    <div class="cont-img lote-image">
                                        <div class="image"
                                             style="background-size: cover; background-position: 50% 50%; background-image: url({{ thumb }}); background-repeat: no-repeat"></div>
                                    </div>
                                    <p>{{ lote.descricao }}</p>
                                </div>
                                <div class="lote-footer">
                                    <div class="valores">
                                        <div class="left">
                                            <h6>Lance Inicial</h6>
                                            {% if lote.valorAtual %}
                                                <strong>R$ {{ lote.valorAtual|number_format(2, ',', '.') }}</strong>
                                            {% else %}
                                                <strong>Em breve</strong>
                                            {% endif %}
                                        </div><!---->
                                        <div class="right">
                                            <h6>Lance Atual</h6>
                                            <strong>-</strong>
                                        </div><!---->
                                    </div><!---->
                                </div>
                                <span class="btn-destaque">Aberto para lances</span>
                            </a>
                        </article><!-- END Único -->
                    {% endfor %}
                </div><!-- END Flex -->
            </div><!-- END Center Full -->
            {#<div class="center">
                <div class="search search-detalhe" style="display: none;">
                    <form>
                        <div>
                            <label for="">Categoria:</label>
                            <div>
                                <select id="">
                                    <option value="">Imóveis</option>
                                </select>
                            </div>
                        </div><!---->

                        <div>
                            <label for="">Tipo de bem:</label>
                            <div>
                                <select id="">
                                    <option value="">Apartamento</option>
                                </select>
                            </div>
                        </div><!---->

                        <div>
                            <label for="">Tipo de leilão:</label>
                            <div>
                                <select id="">
                                    <option value="">Qualquer</option>
                                </select>
                            </div>
                        </div><!---->

                        <div class="btn-cont">
                            <button type="submit">Buscar</button>
                        </div><!---->
                    </form>
                </div><!-- END Pesquisa -->
            </div>#}
        </section><!-- END Destaques -->
        {% endif %}

        <main class="cont-leiloes">
            <div class="center">
                <h2 class="title-default">Agenda de Leilões <a href="#"><i class="fas fa-print"></i></a></h2>

                <nav class="navAba">
                    <ul>
                        <li>
                            <a class="ativo">Leilões Atuais</a>
                        </li>
                        <li>
                            <a>Leilões Encerrados</a>
                        </li>
                    </ul>
                </nav>

                <div class="abaContainer">
                    <div class="item-aba ativo">
                        <div class="flex-leiloes_ agenda-leiloes agenda-leiloes-home">
                            {% for leilao in leiloesAtuais %}
                                {{ include('default/includes/inc.leilao-tab.html.twig', {leilao: leilao, _loop: loop}, with_context = false) }}
                            {% endfor %}
                            {% if not leiloesAtuais|length %}
                                <div class="m-b-lg">Nenhum leilão até o momento.</div>
                                <div class="clearfloat"></div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="item-aba">
                        ...
                        {#<div class="flex-leiloes">
                            <article>
                                <a href="leilao.html" class="info">
                                    <span class="data">05/02 <small>14h</small><h6>Quarta-feira</h6></span>
                                    <h4>Online e Presencial</h4>
                                    <h3>Judicial</h3>
                                    <p>Leilão de 3 apartamentos na Vila Gilhermina.</p>
                                    <ul class="lista-infos">
                                        <li>1a praça: 05/02 14:00</li>
                                        <li>2a praça: 08/02 16:00</li>
                                    </ul>

                                    <small class="num-lotes">42 Lotes</small>

                                    <div class="cont-btn">
                                        <span class="btn-leilao encerrado">Encerrado</span>
                                    </div>
                                </a>
                            </article><!-- END Único -->
                        </div>#}
                    </div>
                </div>
            </div><!-- END Center -->
        </main><!-- END Leilões -->

        <section class="cont-testemunhos">
            <div class="center">
                <h2 class="title-default">DESDE 2009 UMA REFERÊNCIA NO MERCADO DE LEILÕES</h2>

                <div class="slide-testemunhos">
                    <div>
                        <div class="cont-foto">
                            <img src="{{ asset('build/images/foto.jpg') }}" alt="">
                        </div>
                        <div class="cont-text">
                            <img src="{{ asset('build/images/icon-depoimento.png') }}" alt="">
                            <p>"Leiloeiro honesto e sem burocracia. Todo o tramite do processo, desde o arremate à entrega, é realizado de maneira rápida e simples!!! Parabéns pelo trabalho".</p>
                            <span>Ricardo Bertoldo Campos</span>
                            <small>Arrematante</small>
                        </div>
                    </div><!-- END -->
                </div>
            </div><!-- END Center -->
        </section><!-- END Testemunhos -->

    </div>

{% endblock %}