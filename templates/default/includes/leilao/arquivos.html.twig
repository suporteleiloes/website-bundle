<!-- Modal -->
<div class="modal fade" id="arquivosModal" tabindex="-1" role="dialog" aria-labelledby="arquivosModal"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Anexos do leil√£o</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <ul>
                    {% for arquivo in leilao.arquivosSemEdital %}
                        {% if arquivo.permissao == 0 %}
                        <li><a href="{{ arquivo.url }}" target="_blank"><i class="far fa-file-alt"></i> {{ arquivo.nome }}</a></li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>